{% extends 'admin/dashboard/index.html.twig' %}

{% block subbody %}
    <div>
        <h3>Незавершенные регистрации</h3>
    </div>
    <div>
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
            </tr>
            </thead>
            <tbody>
            {% for user in incomplete_registrations %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
